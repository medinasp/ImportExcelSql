@model ImportExcelSql.Models.FileUploadViewModel
@{
    ViewData["Title"] = "File";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        padding: 50px;
        font-weight: 500;
    }
</style>
<h1>File Upload</h1>
<div class="form-group row">
    <form asp-action="File" class="text-left form-validate" enctype="multipart/form-data">
        <div class="form-group col-sm-12">
            <div class="file-select-button" id="fileName">Upload Excel File</div>
            <input asp-for="XlsFile" type="file" id="chooseFile">
        </div>
        <br />
        <br />
        <br />
        <div class="form-group col-sm-6">
            <button type="submit" class="btn btn-primary">Read Excel File</button>
        </div>
    </form>
</div>


<div class="row">
    <form method="post" asp-controller="Import2" asp-action="ImportOnly" class="text-left form-validate">
        <h1>
            Display Excel File Records
        </h1>
        <table class="table table-active table-bordered" width="100">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Email2</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StaffInfoViewModel.StaffList)
                {
                <tr>
                    <td><select asp-for="StaffInfoViewModel.FirstName" asp-items="@(new SelectList(Model.StaffInfoViewModel.StaffList,"FirstName", "FirstName"))" class="form-control"></select></td>
                    <td><select asp-for="StaffInfoViewModel.LastName" asp-items="@(new SelectList(Model.StaffInfoViewModel.StaffList,"LastName", "LastName"))" class="form-control"></select></td>
                    <td><select asp-for="StaffInfoViewModel.Email" option value="@item.Email" class="form-control"></select></td>
                    <td>
                        <a href="@Url.Action("ImportOnly", new { Email = item.Email })">
                            <span class="bi bi-pencil" style="font-size: 1.10rem"> </span>
                        </a>
                    </td>
                    <!--<td>@*@item.FirstName*@</td>-->
                    <!--<td>@*@item.LastName*@</td>-->
                    <!--<td>@*@item.Email*@</td>-->
                </tr>
                }
            </tbody>
        </table>
        <div class="form-group col-sm-6">
            <button type="submit" class="btn btn-primary">Import Excel File</button>
        </div>
    </form>
</div>

